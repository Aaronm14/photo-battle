extends layout

block content
  .voting-container(ng-controller="VoteCtrl")
    h1 Sexy Bachelor
    p.lead Which bachelor photoshop is better?
    hr
    .row
      .col-sm-5
        h2 Photoshop Submitted Title
        .voting-image
          img(src="/images/bachelor-juanpablo-nikki.jpg")
          .vote-overlay
            i.fa.fa-check
      .col-sm-2.vs-col
        em.vs VS
      .col-sm-5
        h2 Photoshop Submitted Title
        .voting-image
          img(src="/images/sloth-bachelor-rose-ceremony.png")
          .vote-overlay
            i.fa.fa-check

  div(ng-controller="ChallengeCtrl")
    #createChallengeForm.row
      .col-sm-8.col-sm-offset-2.text-center
        form
          .form-group
            input.form-control.input-lg.text-center(type="text" placeholder="test" ng-model="formData.subject")
            input.form-control.input-lg.text-center(type="text" placeholder="photoUrl" ng-model="formData.url")
          button.btn.btn-primary.btn-lg(type="submit" ng-click="createChallenge()") Create
    ul
      li(ng-repeat="challenge in challenges")
        p {{challenge.subject}}
        ul(style="margin-left:20px;")
          li(ng-repeat="photo in challenge.photos")
            p.challenge-image
              img(src="{{ photo.url }}")
            p {{challenge.photo.downVotes}}
            p {{challenge.photo.upVotes}}